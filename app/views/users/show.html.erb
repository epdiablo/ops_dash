<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Role:</b>
  <%= @user.role %>
</p>
<div class="span8">
    <% if @user.tickets.any? %>
      <h3>Microposts (<%= @user.tickets.count %>)</h3>
      <ol class="microposts">
        <%= render @tickets %>
      </ol>
      <%= will_paginate @tickets %>
    <% end %>
  </div>

